<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.bwf.tuanche.ui.search.SearchActivity">

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back_search"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/text_10"
            android:src="@mipmap/icon_back" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/padding_5"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_weight="1"
            android:imeActionLabel="搜索"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:inputType="text"
            android:background="@drawable/cornersshape"
            android:drawableLeft="@mipmap/search"
            android:drawablePadding="@dimen/padding_10"
            android:gravity="center_vertical"
            android:textColorHint="@color/light_gray"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_10dp"
            android:text="搜索"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="@color/light_gray"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="热门搜索"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="奔驰"
                    android:textColor="@color/gray" />

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/padding_5"
                    android:layout_marginTop="@dimen/padding_5"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="奔驰"
                    android:textColor="@color/gray" />

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/padding_5"
                    android:layout_marginTop="@dimen/padding_5"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="奔驰"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="奔驰"
                    android:textColor="@color/gray" />

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/padding_5"
                    android:layout_marginTop="@dimen/padding_5"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="奔驰"
                    android:textColor="@color/gray" />

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/padding_5"
                    android:layout_marginTop="@dimen/padding_5"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="奔驰"
                    android:textColor="@color/gray" />

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/padding_5"
                    android:layout_marginTop="@dimen/padding_5"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="奔驰"
                    android:textColor="@color/gray" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/light_gray"/>
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tv_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="奔驰"
                    android:gravity="center"
                    android:textColor="@color/gray"/>
                <View
                    android:layout_width="0.3dp"
                    android:background="@color/light_gray"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_marginBottom="@dimen/padding_5"/>
                <TextView
                    android:id="@+id/tv_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="奔驰"
                    android:gravity="center"
                    android:textColor="@color/gray"/>
                <View
                    android:layout_width="0.3dp"
                    android:background="@color/light_gray"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_marginBottom="@dimen/padding_5"/>
                <TextView
                    android:id="@+id/tv_10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="奔驰"
                    android:gravity="center"
                    android:textColor="@color/gray"/>
                <View
                    android:layout_width="0.3dp"
                    android:background="@color/light_gray"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_marginBottom="@dimen/padding_5"/>
                <TextView
                    android:id="@+id/tv_11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="奔驰"
                    android:gravity="center"
                    android:textColor="@color/gray"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="@color/light_gray"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="搜索历史"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"/>


               <ListView
                   android:id="@+id/recycler_search_history"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/light_gray"/>
        <ListView
            android:id="@+id/recycler_searching"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
        <com.bwf.tuanche.view.LoadingView
            android:id="@+id/search_boy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

        </com.bwf.tuanche.view.LoadingView>
    </RelativeLayout>


</LinearLayout>